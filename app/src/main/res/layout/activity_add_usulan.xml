<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/activity_horizontal_margin">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/container_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/edit_place_name"/>

    </android.support.design.widget.TextInputLayout>

    <ImageButton
        android:id="@+id/btn_set_loc"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_alignBottom="@id/container_lat_lng"
        app:srcCompat="@drawable/ic_my_location_black_24dp"
        android:layout_below="@id/container_title"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/container_lat_lng"
        android:layout_below="@id/container_title"
        android:layout_toRightOf="@id/btn_set_loc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/edit_place_lat"
            android:enabled="false"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/container_address_detail"
        android:layout_below="@id/container_lat_lng"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/edit_place_address"
            android:lines="5"
            android:enabled="false"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/activity_horizontal_margin"
        app:srcCompat="@drawable/ic_add_location_white_24dp"/>

</RelativeLayout>
