<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:padding="@dimen/activity_horizontal_margin"
    app:behavior_hideable="true"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <TextView
        android:id="@+id/place_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/text_img_margin"
        android:layout_toLeftOf="@+id/place_distance"
        android:text="Pasar Genjing"
        android:textSize="25sp"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/place_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_location_on_black_24dp"
        android:layout_below="@id/place_title"
        android:layout_marginBottom="@dimen/mini_margin"
        android:text="Jalan Merdeka Barat No 15"/>

    <TextView
        android:id="@+id/place_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="3.4KM"
        android:textSize="18sp"/>

    <View
        android:id="@+id/place_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/text_img_margin"
        android:layout_below="@id/place_address"
        android:background="@android:color/darker_gray"/>

    <Button
        android:id="@+id/place_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/place_divider"
        android:text="TAMBAHKAN DATA"
        style="@style/Widget.AppCompat.Button.Colored"/>

</RelativeLayout>