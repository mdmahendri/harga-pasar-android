<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    app:cardCornerRadius="@dimen/cardview_default_radius">

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/cardview_default_radius"
        android:paddingBottom="@dimen/cardview_default_radius"
        android:paddingLeft="@dimen/dp4_margin"
        android:paddingRight="@dimen/dp4_margin">

        <ImageView
            android:id="@+id/badge_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_mood_orange_24dp"/>

        <TextView
            android:id="@+id/badge_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp4_margin"
            android:layout_toRightOf="@id/badge_icon"
            android:layout_centerVertical="true"
            android:textColor="@android:color/black"
            android:text="0 poin"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>